  <description>Authable is a standalone REST API to help with the server side managing TOTP based
    authentication
  </description>
  <groupId>com.github.godwinpinto.authable</groupId>
  <modelVersion>4.0.0</modelVersion>
  <modules>
    <module>application-rest</module>
    <module>domain</module>
    <module>infrastructure-crypto</module>
    <module>infrastructure-coredb</module>
    <module>domain-dto</module>
    <module>domain-ports-api</module>
    <module>domain-ports-spi</module>
    <module>commons</module>
    <module>orchestration</module>
  </modules>
  <name>Authable</name>
  <packaging>pom</packaging>
  <parent>
    <artifactId>spring-boot-starter-parent</artifactId>
    <groupId>org.springframework.boot</groupId>
    <relativePath/>
    <version>3.0.6</version>
  </parent>
  <properties>
    <io.jsonwebtoken.version>0.11.2</io.jsonwebtoken.version>
    <java.version>17</java.version>
    <lombok-mapstruct-binding.version>0.2.0</lombok-mapstruct-binding.version>
    <org.mapstruct.version>1.5.3.Final</org.mapstruct.version>
    <org.projectlombok.version>1.18.20</org.projectlombok.version>
    <sonar.coverage.exclusions>
      **/dto/*,
      **/entity/*,
      **/ports/api/*,
      **/ports/spi/*,
      **/orchestration/config/*,
      **/orchestration/AuthableApplication.java
    </sonar.coverage.exclusions>
    <sonar.coverage.jacoco.xmlReportPaths>
      ${project.basedir}/report-aggregate/target/site/jacoco-aggregate/jacoco.xml
    </sonar.coverage.jacoco.xmlReportPaths>
  </properties>
  <version>0.0.1-SNAPSHOT</version>
